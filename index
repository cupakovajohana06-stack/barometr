    </main>

    <script>
        const METODIKY = {
            A: { title: "Metoda A: Modelování vlastní chyby", text: "Učitel záměrně udělá chybu na tabuli a nechá třídu ji najít. Místo omluvy reaguje nadšením: 'Skvěle! Tímto jsme si ujasnili častý chyták.' Tím zbavujete chybu nálepky ostudy." },
            B: { title: "Metoda B: Anonymní práce s chybou", text: "Vysoký strach před třídou řešte anonymitou. Vyberte chybná řešení z testů, anonymně je promítněte a nechte třídu společně hledat 'detektivní záhadu' v postupu." },
            C: { title: "Metoda C: Formativní Retest", text: "Nabídněte žákům, že pokud po testu vypracují analýzu svých chyb, mohou získat část bodů zpět. Chyba se tak stává odrazovým můstkem k úspěchu, nikoliv trestem." },
            D: { title: "Metoda D: Safe Space rituály", text: "Zaveďte pravidlo 'nejlepší chyby dne' – moment, který celou třídu naučil něco nového. Oceňujte odvahu přiznat nepochopení. To je základem bezpečí." }
        };

        function vypocitej() {
            const tVal = document.getElementById('teorie').value;
            const pVal = document.getElementById('praxe').value;
            
            if (tVal === "" || pVal === "") { alert("Vyplňte obě pole."); return; }

            const teorie = parseFloat(tVal);
            const praxe = parseFloat(pVal);
            const rozkol = parseFloat((praxe - teorie).toFixed(2));

            document.getElementById('vysledek-placeholder').classList.add('hidden');
            const box = document.getElementById('vysledek-box');
            box.classList.remove('hidden');
            const container = document.getElementById('metody-container');
            container.innerHTML = ""; 

            let vybraneMetody = [];

            if (rozkol > 1.2) {
                document.getElementById('diagnoza-title').innerText = "Vysoká kognitivní diskrepance";
                document.getElementById('diagnoza-title').className = "text-2xl font-bold text-red-700";
                box.className = "bg-white p-8 rounded-2xl shadow-xl border-l-8 border-red-500 block";
                document.getElementById('badge-rozkol').innerText = `Rozkol: ${rozkol}`;
                document.getElementById('badge-rozkol').className = "px-3 py-1 rounded-full text-xs font-bold uppercase bg-red-100 text-red-700";
                document.getElementById('rozkol-info').innerText = "Ve třídě existuje rozpor. Žáci sice deklarují, že chybu chápou, ale v praxi jsou paralyzováni strachem. Problém je v sociálním bezpečí.";
                vybraneMetody = [METODIKY.B, METODIKY.D];
            } else if (praxe > 3.2) {
                document.getElementById('diagnoza-title').innerText = "Hladina strachu je vysoká";
                document.getElementById('diagnoza-title').className = "text-2xl font-bold text-orange-600";
                box.className = "bg-white p-8 rounded-2xl shadow-xl border-l-8 border-orange-400 block";
                document.getElementById('badge-rozkol').innerText = `Praxe: ${praxe}`;
                document.getElementById('badge-rozkol').className = "px-3 py-1 rounded-full text-xs font-bold uppercase bg-orange-100 text-orange-600";
                document.getElementById('rozkol-info').innerText = "Žáci vnímají chybu jako definitivní selhání. Je potřeba prakticky normalizovat chybu jako přirozený proces učení.";
                vybraneMetody = [METODIKY.A, METODIKY.C];
            } else {
                document.getElementById('diagnoza-title').innerText = "Zdravé klima třídy";
                document.getElementById('diagnoza-title').className = "text-2xl font-bold text-green-700";
                box.className = "bg-white p-8 rounded-2xl shadow-xl border-l-8 border-green-500 block";
                document.getElementById('badge-rozkol').innerText = "V pořádku";
                document.getElementById('badge-rozkol').className = "px-3 py-1 rounded-full text-xs font-bold uppercase bg-green-100 text-green-700";
                document.getElementById('rozkol-info').innerText = "Gratulujeme. Žáci jsou schopni s chybou pracovat bez výraznějšího emočního stresu a vnímají její hodnotu.";
                vybraneMetody = [METODIKY.D];
            }

            vybraneMetody.forEach(m => {
                const div = document.createElement('div');
                div.className = "bg-slate-50 p-4 rounded-xl border border-slate-200";
                div.innerHTML = `<h4 class="font-bold text-indigo-800 text-xs uppercase mb-1">${m.title}</h4><p class="text-slate-700 text-sm">${m.text}</p>`;
                container.appendChild(div);
            });
        }
    </script>
</body>
</html>